{
  "name": "eslint-plugin-vuejs-accessibility",
  "version": "0.6.1",
  "description": "An eslint plugin for checking Vue.js files for accessibility",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint --cache .",
    "test": "jest"
  },
  "author": "Kevin Deisz",
  "license": "MIT",
  "repository": "github:vue-a11y/eslint-plugin-vuejs-accessibility",
  "bugs": {
    "url": "https://github.com/vue-a11y/eslint-plugin-vuejs-accessibility/issues"
  },
  "homepage": "https://github.com/vue-a11y/eslint-plugin-vuejs-accessibility#readme",
  "keywords": [
    "eslint",
    "eslint-plugin",
    "a11y",
    "accessibility",
    "vue",
    "vuejs"
  ],
  "peerDependencies": {
    "eslint": "^5.0.0 || ^6.0.0 || ^7.0.0"
  },
  "dependencies": {
    "aria-query": "^4.2.2",
    "emoji-regex": "^9.0.0",
    "vue-eslint-parser": "^7.0.0"
  },
  "devDependencies": {
    "eslint": "^7.3.1",
    "eslint-plugin-eslint-plugin": "^2.3.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "prettier": "^2.1.1",
    "pretty-quick": "^3.0.0"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:eslint-plugin/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2015
    },
    "plugins": [
      "eslint-plugin"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ],
    "testRegex": ".test.js$"
  },
  "prettier": {
    "trailingComma": "none"
  },
  "directories": {
    "doc": "docs"
  }
}
