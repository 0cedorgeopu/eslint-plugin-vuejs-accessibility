{
  "name": "eslint-plugin-vue-accessibility",
  "version": "0.1.0",
  "description": "An eslint plugin for checking Vue.js files for accessibility",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint --cache .",
    "test": "jest"
  },
  "author": "Kevin Deisz",
  "license": "MIT",
  "peerDependencies": {
    "eslint": "^5.0.0 || ^6.0.0"
  },
  "dependencies": {
    "vue-eslint-parser": "^7.0.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "jest": "^25.4.0",
    "prettier": "^2.0.4",
    "pretty-quick": "^2.0.1"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2015
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ]
  },
  "prettier": {
    "trailingComma": "none"
  }
}
